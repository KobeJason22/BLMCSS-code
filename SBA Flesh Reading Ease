program split_string;

uses SysUtils;

var
  A: TStringArray;
  inputStr, line : string;
  score: integer;

begin
  word=0
  writeln('Input the essay: ');
  readln(inputStr);

  for line in A do
  begin
   A := inputStr.Split(' ');
   lines += line.count(".");
   word += len(word);
  end;
  writeln(line);
  writeln(word);
  score=206.835  – 1.015 * (words/sentences) – 84.6 * (syllables/words);
  writeln(score);

  Readln;
end.                    
